<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBarCustom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#FFFFFF">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="PolyLib"
            android:textSize="30dp"
            android:textColor="#ED7D2D"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng quan"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"/>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnQuanLySach"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/baseline_menu_book_64"
            android:background="@drawable/button_booktype"
            android:text="Quản Lí Loại Sách"
            android:textSize="20dp"
            android:textStyle="bold"
            app:backgroundTint="@null" />
        <Button
            android:id="@+id/btnQuanLyThanhVien"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/baseline_person_64"
            android:background="@drawable/ic_button_pink"
            android:text="Quản Lí Thành Viên"
            android:textSize="20dp"
            android:textStyle="bold"
            app:backgroundTint="@null" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnQuanLyPhieuMuon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/baseline_bookmark_64"
            android:background="@drawable/ic_button_blue"
            android:text="Quản Lí Phiếu Mượn"
            android:textSize="20dp"
            android:textStyle="bold"
            app:backgroundTint="@null" />
        <Button
            android:id="@+id/btnThongKe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/baseline_menu_book_64"
            android:background="@drawable/ic_button_orange"
            android:text="Thống Kê "
            android:textSize="20dp"
            android:textStyle="bold"
            app:backgroundTint="@null" />

        </LinearLayout>
    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu_navigation"/>
</androidx.drawerlayout.widget.DrawerLayout>


