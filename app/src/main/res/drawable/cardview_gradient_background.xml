<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/cardview_gradient_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Solid background with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
        </shape>
    </item>
    <!-- Gradient overlay with the same rounded corners -->
    <item android:left="1dp" android:right="2dp" android:top="5dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#ED7D2D"
                android:endColor="#FFFFFF"
                android:angle="45" />
            <corners android:radius="9dp" />
        </shape>
    </item>
</layer-list>
